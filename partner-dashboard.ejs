    <!-- CONSOLIDATED JAVASCRIPT & FIREBASE LOGIC -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, collection, onSnapshot, doc, setDoc, addDoc, setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        
        // --- GLOBAL STATE VARIABLES ---
        setLogLevel('Debug'); // Enable Firestore logging
        
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

        let db = null;
        let userId = null;
        let dealerList = []; // Real-time array of dealer documents
        let editingDealerId = null; // Tracks which dealer is being edited/added

        // --- DOM ELEMENTS ---
        const dealerListDisplay = document.getElementById('dealerListDisplay');
        const dealerFormCard = document.getElementById('dealerFormCard');
        const detailsForm = document.getElementById('detailsForm');
        const formTitle = document.getElementById('formTitle');
        const loadingMessage = document.getElementById('loadingMessage');
        const formMessage = document.getElementById('formMessage');
        
        // --- FIREBASE INITIALIZATION & AUTHENTICATION ---

        async function setupFirebase() {
            try {
                if (Object.keys(firebaseConfig).length === 0) {
                    console.error("Firebase config is missing.");
                    loadingMessage.textContent = "Error: Firebase configuration missing.";
                    return;
                }
                
                const app = initializeApp(firebaseConfig);
                db = getFirestore(app);
                const auth = getAuth(app);
                
                // 1. Sign in the user
                if (initialAuthToken) {
                    await signInWithCustomToken(auth, initialAuthToken);
                } else {
                    await signInAnonymously(auth);
                }

                // 2. Wait for auth state change to get the userId and start listening
                onAuthStateChanged(auth, (user) => {
                    if (user) {
                        userId = user.uid;
                        // 3. Once we have the user ID, start the real-time listener
                        setupDealerListener(); 
                    } else {
                        // Fallback or error state if auth failed
                        console.error("Authentication failed. Cannot access user-specific data.");
                        userId = 'anonymous'; // Use a generic ID if needed, though security rules might block access
                        loadingMessage.textContent = "Error: Failed to authenticate user.";
                    }
                });

            } catch (error) {
                console.error("Firebase setup failed:", error);
                loadingMessage.textContent = `Failed to connect to the database: ${error.message}`;
            }
        }
        
        // --- REAL-TIME DATA LISTENER ---

        function setupDealerListener() {
            if (!db || !userId) return;

            const collectionPath = `/artifacts/${appId}/users/${userId}/dealers`;
            const dealersCollectionRef = collection(db, collectionPath);
            
            loadingMessage.textContent = "Loading dealers in real-time...";

            // onSnapshot keeps the local 'dealerList' synchronized with Firestore
            onSnapshot(dealersCollectionRef, (snapshot) => {
                dealerList = [];
                snapshot.forEach((doc) => {
                    // Store the document ID with the data for update/delete operations
                    dealerList.push({ id: doc.id, ...doc.data() });
                });
                
                // Re-render the UI whenever the data changes
                renderDealerList();
            }, (error) => {
                console.error("Error fetching dealers:", error);
                dealerListDisplay.innerHTML = 
                    `<p style="text-align: center; color: #d32f2f;">
                        Error loading dealer data. Check console for details.
                    </p>`;
            });
        }
        
        // --- UI RENDER & UTILITIES ---
        
        function showMessage(type, message) {
            formMessage.textContent = message;
            formMessage.className = 'message-box ' + type;
            formMessage.style.display = 'block';
            setTimeout(() => {
                formMessage.style.display = 'none';
            }, 5000);
        }

        function renderDealerList() {
            loadingMessage.style.display = 'none';

            if (dealerList.length === 0) {
                dealerListDisplay.innerHTML = '<p style="text-align: center; color: #8e24aa; font-style: italic;">No dealers added yet. Click "Add New Dealer" to begin.</p>';
                return;
            }

            let tableHTML = `
                <div style="overflow-x: auto;">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Company Name</th>
                                <th>Contact Person</th>
                                <th>Phone</th>
                                <th>GSTIN</th>
                                <th style="text-align: center;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
            `;

            dealerList.forEach(dealer => {
                const companyName = dealer.company_name || 'N/A';
                const contactPerson = dealer.contact_person || 'N/A';
                const phoneNumber = dealer.phone_number || 'N/A';
                const gstinNumber = dealer.gstin_number || 'N/A';

                tableHTML += `
                    <tr>
                        <td>${companyName}</td>
                        <td>${contactPerson}</td>
                        <td>${phoneNumber}</td>
                        <td>${gstinNumber}</td>
                        <td style="text-align: center;">
                            <button class="dealer-action-btn" title="Edit Dealer" onclick="window.openDealerForm('${dealer.id}')">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </button>
                        </td>
                    </tr>
                `;
            });

            tableHTML += `
                        </tbody>
                    </table>
                </div>
            `;
            dealerListDisplay.innerHTML = tableHTML;
        }

        // Opens the form for adding (null) or editing (dealer ID)
        window.openDealerForm = function(dealerId = null) {
            detailsForm.reset();
            formMessage.style.display = 'none';
            // Use 'null' string if passed from HTML/onclick, otherwise check for actual null
            editingDealerId = (dealerId === 'null' || dealerId === null) ? null : dealerId; 

            if (editingDealerId) {
                // EDIT MODE
                const dealer = dealerList.find(d => d.id === editingDealerId);
                if (!dealer) return; 

                formTitle.innerHTML = `<i class="fa-solid fa-user-pen"></i> Edit Dealer: ${dealer.company_name}`;
                
                // Populate the form fields
                document.getElementById('companyName').value = dealer.company_name || '';
                document.getElementById('contactPerson').value = dealer.contact_person || '';
                document.getElementById('phoneNumber').value = dealer.phone_number || '';
                document.getElementById('gstinNumber').value = dealer.gstin_number || '';
                document.getElementById('address').value = dealer.address || '';

            } else {
                // ADD MODE
                formTitle.innerHTML = `<i class="fa-solid fa-user-plus"></i> Add New Dealer`;
            }

            // Toggle UI visibility
            document.getElementById('dealerManagementCard').style.display = 'none';
            dealerFormCard.style.display = 'block';
        }
        
        // Closes the form and returns to the list view
        window.closeDealerForm = function() {
            editingDealerId = null;
            dealerFormCard.style.display = 'none';
            document.getElementById('dealerManagementCard').style.display = 'block';
            // List rerenders automatically via onSnapshot
        }
        
        // --- FORM SUBMISSION HANDLER ---
        
        detailsForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            if (!db || !userId) {
                showMessage('error', 'Database not ready. Please wait for initialization.');
                return;
            }

            const formData = {
                company_name: document.getElementById('companyName').value.trim(),
                contact_person: document.getElementById('contactPerson').value.trim(),
                phone_number: document.getElementById('phoneNumber').value.trim(),
                gstin_number: document.getElementById('gstinNumber').value.trim(),
                address: document.getElementById('address').value.trim()
            };
            
            showMessage('loading', editingDealerId ? 'Updating dealer...' : 'Adding new dealer...');

            try {
                const collectionPath = `/artifacts/${appId}/users/${userId}/dealers`;
                
                if (editingDealerId) {
                    // EDIT MODE: Update existing document
                    const dealerRef = doc(db, collectionPath, editingDealerId);
                    await setDoc(dealerRef, formData, { merge: true });
                    showMessage('success', 'Dealer updated successfully!');
                } else {
                    // ADD MODE: Create a new document
                    const dealersCollectionRef = collection(db, collectionPath);
                    await addDoc(dealersCollectionRef, formData);
                    showMessage('success', 'New dealer added successfully!');
                }

                // Close form only after successful database operation
                closeDealerForm(); 

            } catch (error) {
                console.error('Firestore save failed:', error);
                showMessage('error', `Failed to save dealer: ${error.message}`);
            }
        });

        // 4. Start the application setup when the window loads
        window.onload = setupFirebase;
        

    <script>
        // DOM ELEMENTS for Dealer Management
        const dealerListDisplay = document.getElementById('dealerListDisplay');
        const dealerFormCard = document.getElementById('dealerFormCard');
        const detailsForm = document.getElementById('detailsForm');
        const formTitle = document.getElementById('formTitle');
        const loadingMessage = document.getElementById('loadingMessage');
        const formMessage = document.getElementById('formMessage');

        // MOCK DATA for multiple dealers (Replace with actual API fetch)
        let dealerList = [
            { id: 1, company_name: "Apex Traders", contact_person: "Rajesh Kumar", phone_number: "9876543210", gstin_number: "GST12345", address: "Mumbai, Maharashtra" },
            { id: 2, company_name: "Gauri Steels", contact_person: "Priya Sharma", phone_number: "9000111222", gstin_number: "GST67890", address: "Pune, Maharashtra" },
            { id: 3, company_name: "Shinde Hardware", contact_person: "Vijay Shinde", phone_number: "8888777666", gstin_number: "GST54321", address: "Nagpur, Maharashtra" }
        ];
        let nextDealerId = 4; // Used for mock adding a new dealer
        let editingDealerId = null; // Tracks which dealer is being edited/added

        // Helper function to show form messages
        function showMessage(type, message) {
            formMessage.textContent = message;
            formMessage.className = 'message-box ' + type;
            formMessage.style.display = 'block';
            setTimeout(() => {
                formMessage.style.display = 'none';
            }, 5000);
        }

        // Renders the list of dealers into a table
        function renderDealerList() {
            loadingMessage.style.display = 'none';

            if (dealerList.length === 0) {
                dealerListDisplay.innerHTML = '<p style="text-align: center; color: #d32f2f; font-style: italic;">No dealers added yet. Click "Add New Dealer" to begin.</p>';
                return;
            }

            let tableHTML = `
                <div style="overflow-x: auto;">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Company Name</th>
                                <th>Contact Person</th>
                                <th>Phone</th>
                                <th>GSTIN</th>
                                <th style="text-align: center;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
            `;

            dealerList.forEach(dealer => {
                tableHTML += `
                    <tr>
                        <td>${dealer.company_name}</td>
                        <td>${dealer.contact_person || 'N/A'}</td>
                        <td>${dealer.phone_number}</td>
                        <td>${dealer.gstin_number || 'N/A'}</td>
                        <td style="text-align: center;">
                            <button class="dealer-action-btn" title="Edit Dealer" onclick="openDealerForm(${dealer.id})">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </button>
                        </td>
                    </tr>
                `;
            });

            tableHTML += `
                        </tbody>
                    </table>
                </div>
            `;
            dealerListDisplay.innerHTML = tableHTML;
        }

        // Opens the form for adding (null) or editing (dealer ID)
        function openDealerForm(dealerId = null) {
            detailsForm.reset();
            formMessage.style.display = 'none';
            editingDealerId = dealerId;

            if (dealerId !== null) {
                // EDIT MODE
                const dealer = dealerList.find(d => d.id === dealerId);
                formTitle.innerHTML = `<i class="fa-solid fa-user-pen"></i> Edit Dealer: ${dealer.company_name}`;
                
                // Populate the form fields
                document.getElementById('companyName').value = dealer.company_name || '';
                document.getElementById('contactPerson').value = dealer.contact_person || '';
                document.getElementById('phoneNumber').value = dealer.phone_number || '';
                document.getElementById('gstinNumber').value = dealer.gstin_number || '';
                document.getElementById('address').value = dealer.address || '';

            } else {
                // ADD MODE
                formTitle.innerHTML = `<i class="fa-solid fa-user-plus"></i> Add New Dealer`;
            }

            // Toggle UI visibility
            document.getElementById('dealerManagementCard').style.display = 'none';
            dealerFormCard.style.display = 'block';
        }
        
        // Closes the form and returns to the list view
        function closeDealerForm() {
            editingDealerId = null;
            dealerFormCard.style.display = 'none';
            document.getElementById('dealerManagementCard').style.display = 'block';
            renderDealerList(); 
        }

        // Handle form submission (Add or Edit)
        detailsForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = {
                company_name: document.getElementById('companyName').value,
                contact_person: document.getElementById('contactPerson').value,
                phone_number: document.getElementById('phoneNumber').value,
                gstin_number: document.getElementById('gstinNumber').value,
                address: document.getElementById('address').value
            };
            
            showMessage('loading', 'Saving dealer details...');

            // ðŸ›‘ MOCK API CALL START ðŸ›‘
            setTimeout(() => {
                if (editingDealerId !== null) {
                    // EDIT LOGIC (MOCK)
                    const index = dealerList.findIndex(d => d.id === editingDealerId);
                    if (index !== -1) {
                        dealerList[index] = { ...dealerList[index], ...formData };
                        showMessage('success', 'Dealer updated successfully.');
                    }
                } else {
                    // ADD LOGIC (MOCK)
                    const newDealer = { id: nextDealerId++, ...formData };
                    dealerList.push(newDealer);
                    showMessage('success', 'New dealer added successfully.');
                }

                // In a real application, you would make an API call here (e.g., POST or PUT /api/dealers)
                // and then call closeDealerForm() only upon success.
                closeDealerForm(); 
            }, 800);
            // ðŸ›‘ MOCK API CALL END ðŸ›‘
        });

        // 1. Initial Load:
        // In a real application, you'd fetch the list from the server here:
        // fetch('/api/dealers').then(res => res.json()).then(data => { dealerList = data; renderDealerList(); });
        renderDealerList(); // Using mock data for immediate display
    </script>

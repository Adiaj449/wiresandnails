            background-color: #e3f2fd; /* Light blue header */
            color: #1a237e;
            text-transform: uppercase;
            font-weight: 700;
        }
        
        .data-table tbody tr:hover {
            background-color: #f9f9f9;
        }

        /* Status Badges */
        .status-badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 4px;
            font-weight: 700;
            font-size: 0.8em;
            text-align: center;

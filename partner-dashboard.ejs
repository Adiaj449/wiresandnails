    <!-- FIREBASE IMPORTS (REQUIRED) -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, addDoc, setDoc, onSnapshot, collection, query, setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Global environment variables provided by the Canvas hosting environment
        // The ternary operator handles cases where the variables might not be defined during initial testing.
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : null;
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

        // Firebase variables
        let app;
        let db;
        let auth;
        let userId = null;
        let dealersCollectionRef = null; 

        // State and DOM elements
        let dealerList = []; 
        let editingDealerId = null; 

        const dealerListDisplay = document.getElementById('dealerListDisplay');
        const dealerFormCard = document.getElementById('dealerFormCard');
        const detailsForm = document.getElementById('detailsForm');
        const formTitle = document.getElementById('formTitle');
        const formMessage = document.getElementById('formMessage');
        const loadingMessage = document.getElementById('loadingMessage');
        const userIdDisplay = document.getElementById('userIdDisplay');
        
        // --- UI UTILITIES ---
        
        function showMessage(type, message) {
            formMessage.textContent = message;
            formMessage.className = 'message-box ' + type;
            formMessage.style.display = 'block';
            setTimeout(() => {
                formMessage.style.display = 'none';
            }, 5000);
        }

        function renderDealerList() {
            if (dealerList.length === 0) {
                dealerListDisplay.innerHTML = '<p style="text-align: center; color: #8e24aa; font-style: italic;">No dealers added yet. Click "Add New Dealer" to begin.</p>';
                return;
            }

            let tableHTML = `
                <div style="overflow-x: auto;">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Company Name</th>
                                <th>Contact Person</th>
                                <th>Phone</th>
                                <th>GSTIN</th>
                                <th style="text-align: center;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
            `;

            dealerList.forEach(dealer => {
                const companyName = dealer.company_name || 'N/A';
                const contactPerson = dealer.contact_person || 'N/A';
                const phoneNumber = dealer.phone_number || 'N/A';
                const gstinNumber = dealer.gstin_number || 'N/A';

                // We must use the global window.openDealerForm function for onclick events
                tableHTML += `
                    <tr>
                        <td>${companyName}</td>
                        <td>${contactPerson}</td>
                        <td>${phoneNumber}</td>
                        <td>${gstinNumber}</td>
                        <td style="text-align: center;">
                            <button class="dealer-action-btn" title="Edit Dealer" onclick="window.openDealerForm('${dealer.id}')">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </button>
                        </td>
                    </tr>
                `;
            });

            tableHTML += `
                        </tbody>
                    </table>
                </div>
            `;
            dealerListDisplay.innerHTML = tableHTML;
        }

        // --- FIREBASE INITIALIZATION & AUTHENTICATION ---

        async function initFirebaseAndLoadData() {
            setLogLevel('Debug'); // Enable Firebase debug logging

            if (!firebaseConfig) {
                console.error("Firebase config is missing. Cannot initialize Firestore.");
                loadingMessage.style.display = 'none';
                userIdDisplay.textContent = 'Auth Failed (No Config)';
                dealerListDisplay.innerHTML = '<p style="text-align: center; color: #d32f2f; font-weight: 700;">Database connection failed: Configuration missing.</p>';
                return;
            }

            try {
                app = initializeApp(firebaseConfig);
                db = getFirestore(app);
                auth = getAuth(app);
                
                // 1. Authentication
                let userCredential;
                if (initialAuthToken) {
                    userCredential = await signInWithCustomToken(auth, initialAuthToken);
                } else {
                    userCredential = await signInAnonymously(auth);
                }

                userId = userCredential.user.uid;
                userIdDisplay.textContent = userId;
                
                // 2. Define the data path for private user data
                const collectionPath = `/artifacts/${appId}/users/${userId}/dealers`;
                dealersCollectionRef = collection(db, collectionPath);
                
                // 3. Start listening for real-time updates
                setupRealtimeListener();

            } catch (error) {
                console.error("Firebase Initialization or Authentication failed:", error);
                loadingMessage.style.display = 'none';
                userIdDisplay.textContent = 'Auth Error';
                dealerListDisplay.innerHTML = `<p style="text-align: center; color: #d32f2f; font-weight: 700;">Connection Error: Authentication failed. See console.</p>`;
            }
        }
        
        // --- REAL-TIME DATA LISTENER ---
        
        function setupRealtimeListener() {
            if (!dealersCollectionRef) return;

            loadingMessage.style.display = 'block';
            const q = query(dealersCollectionRef);
            
            // Set up the real-time listener using onSnapshot
            onSnapshot(q, (snapshot) => {
                // Map Firestore documents to a local dealer list structure
                dealerList = snapshot.docs.map(doc => ({
                    id: doc.id, // Firestore document ID
                    ...doc.data()
                }));
                
                // Re-render the list immediately whenever data changes
                renderDealerList(); 
                loadingMessage.style.display = 'none';

            }, (error) => {
                console.error("Error setting up real-time listener:", error);
                loadingMessage.style.display = 'none';
                dealerListDisplay.innerHTML = `<p style="text-align: center; color: #d32f2f; font-weight: 700;">Real-time update failed: ${error.message}</p>`;
            });
        }


        // --- UI & FORM LOGIC (Exposed to Global Scope for HTML onClick) ---

        window.openDealerForm = function(dealerId = null) {
            detailsForm.reset();
            formMessage.style.display = 'none';
            // Use 'null' string if passed from HTML/onclick, otherwise check for actual null
            editingDealerId = (dealerId === 'null' || dealerId === null) ? null : dealerId; 

            if (editingDealerId) {
                // EDIT MODE
                const dealer = dealerList.find(d => d.id === editingDealerId);
                if (!dealer) return; 

                formTitle.innerHTML = `<i class="fa-solid fa-user-pen"></i> Edit Dealer: ${dealer.company_name}`;
                
                // Populate the form fields
                document.getElementById('companyName').value = dealer.company_name || '';
                document.getElementById('contactPerson').value = dealer.contact_person || '';
                document.getElementById('phoneNumber').value = dealer.phone_number || '';
                document.getElementById('gstinNumber').value = dealer.gstin_number || '';
                document.getElementById('address').value = dealer.address || '';

            } else {
                // ADD MODE
                formTitle.innerHTML = `<i class="fa-solid fa-user-plus"></i> Add New Dealer`;
            }

            // Toggle UI visibility
            document.getElementById('dealerManagementCard').style.display = 'none';
            dealerFormCard.style.display = 'block';
        }
        
        window.closeDealerForm = function() {
            editingDealerId = null;
            dealerFormCard.style.display = 'none';
            document.getElementById('dealerManagementCard').style.display = 'block';
        }
        
        // --- FORM SUBMISSION HANDLER ---
        
        detailsForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            if (!db || !dealersCollectionRef) {
                showMessage('error', 'Database not connected. Please refresh and try again.');
                return;
            }

            const formData = {
                company_name: document.getElementById('companyName').value.trim(),
                contact_person: document.getElementById('contactPerson').value.trim(),
                phone_number: document.getElementById('phoneNumber').value.trim(),
                gstin_number: document.getElementById('gstinNumber').value.trim(),
                address: document.getElementById('address').value.trim(),
                updated_at: new Date().toISOString()
            };
            
            try {
                if (editingDealerId) {
                    // EDIT MODE: Use setDoc on the existing document reference
                    const dealerRef = doc(db, dealersCollectionRef.path, editingDealerId);
                    await setDoc(dealerRef, formData, { merge: true }); // Merge ensures only these fields are updated
                    showMessage('success', 'Dealer updated successfully!');
                } else {
                    // ADD MODE: Use addDoc to create a new document with an auto-generated ID
                    await addDoc(dealersCollectionRef, formData);
                    showMessage('success', 'New dealer added successfully!');
                }
                
                closeDealerForm(); 
            } catch (error) {
                console.error("Error saving dealer:", error);
                showMessage('error', `Failed to save dealer: ${error.message}`);
            }
        });

        // Start the application by initializing Firebase and loading dealers
        window.onload = initFirebaseAndLoadData;
        
    </script>
